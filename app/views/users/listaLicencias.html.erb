                </td>
                <td>
                    <%= link_to 'Rechazar licencia', url_for(action: :rechazarLic, id: u.id), data: {turbo_method: :rechazarLic, turbo_confirm: 'Esta seguro que desea rechazar la licencia?'}, class: "button is-warning is-outlined is-light"%>
                </td>
            </tr>
        <% end %>
        </tbody>
    </table>
