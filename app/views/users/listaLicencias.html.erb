            </tr>
        </thead>  
        <tbody>  
            <% @usuarios.each  do |u| %>
            <tr>
                <td><%= u.name%></td>
                <td><%= u.last_name %> </td>
                <td><%= u.dni_nro%></td>
                <td><%= u.vencimiento_licencia%></td>
