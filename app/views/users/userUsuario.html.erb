<% flash.each do |type, msg| %>
  <% if type=="danger" %>
    <div class="alert alert-danger">
       <%= msg %>
    </div>
  <%end%>
  <% if type=="warning" %>
  <div class="alert alert-warning">
     <%= msg %>
  </div>
  <%end%>
  <% if type=="notice" %>
    <div class="alert alert-success">
     <%= msg %>
    </div>
  <%end%>
<% end %>
